@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>

    <!--category highlighting-->
    @foreach (string category in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@category" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCategory == category ? "btn-primary" : "btn-outline-secondary")">@category</a>
    }
</div>