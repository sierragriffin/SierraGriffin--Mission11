@{
}

@model Cart

<div class="" style="float: right !important;">

    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Items.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }

    <!--Cart icon button: takes user to order summary page-->
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/AddToCart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>

</div>